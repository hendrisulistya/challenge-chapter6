<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/update_user.css" />
    <title>Create User</title>
</head>

<body>
    <div class="container d-flex align-items-center justify-content-center">
        <form action="/users/view_user/<%= user.id %>" class="box-shadow p-5 w-50" method="POST">
            <div class="img-text text-center">
                <h2 class="text-center px-4">
                    PROFILE<span class="color">USER</span>
                </h2>
            </div>
            <div style="margin-top: 5%" class="row">
                <div class="col">Name :</div>
                <div class="col">
                    <%= user.UserGameBiodatum.name %>
                </div>
            </div>

            <div style="margin-top: 10%" class="row">
                <div class="col">Win</div>
                <div class="col">Draw</div>
                <div class="col">Lose</div>
            </div>
            <div class="row">
                <div class="col">
                    <%= user.win %>
                </div>
                <div class="col">
                    <%= user.draw %>
                </div>
                <div class="col">
                    <%= user.lose %>
                </div>
            </div>
    </div>
    </form>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const submit = document.getElementById('submit');
        submit.addEventListener('click', () => {
            Swal.fire({
                title: 'Success',
                html: 'User data has been successfully updated <br><h3>back to /users</h3> or <br><h3 style="display: inline"><a href="http://localhost:3000/users">check here</a></h3> if you use port <span style="color: red; font-weight: bold; font-size: 25px;">3000</span>',
                icon: 'success',
                confirmButtonText: 'close',
            }).then((result) => {
                if (result.isConfirmed) {
                    location.reload();
                }
            });
        });
    </script>
</body>

</html>